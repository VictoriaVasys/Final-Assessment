<div class="form">
  <%= form_for(:session, url: root_path) do |f| %>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>
    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <%= f.submit "Log In", class: "btn btn-default"%>
  <% end %>
</div>

<%= link_to "Sign up by clicking here.", sign_up_path %>
